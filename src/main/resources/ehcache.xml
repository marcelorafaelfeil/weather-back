<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="true"
         monitoring="autodetect"
         dynamicConfig="true">

    <cache name="city.search" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToLiveSeconds="86400" timeToIdleSeconds="3600" />
    <cache name="openweather.forecast" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToLiveSeconds="3600" timeToIdleSeconds="3600" />
</ehcache>
